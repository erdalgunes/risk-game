{
  "name": "risk-game",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "// === Setup & Health ===": "",
    "setup": "npx tsx scripts/setup.ts",
    "doctor": "npx tsx scripts/doctor.ts",
    "// === Development ===": "",
    "predev": "npx tsx scripts/validate-env.ts",
    "dev": "next dev",
    "dev:mock": "cross-env NEXT_PUBLIC_MOCK_MODE=true npm run dev",
    "// === Build & Production ===": "",
    "build": "next build",
    "start": "next start",
    "production": "npm run build && npm run start",
    "analyze": "cross-env ANALYZE=true npm run build",
    "// === Code Quality ===": "",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "// === Testing ===": "",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:local": "playwright test --config=playwright.config.test.ts",
    "test:e2e:local:ui": "playwright test --config=playwright.config.test.ts --ui",
    "test:e2e:local:debug": "playwright test --config=playwright.config.test.ts --debug",
    "test:e2e:prod": "PLAYWRIGHT_BASE_URL=https://risk-red.vercel.app playwright test",
    "test:e2e:smoke": "cross-env TEST_GREP=@smoke playwright test",
    "test:e2e:regression": "playwright test",
    "test:all": "npm run type-check && npm run test run && npm run test:e2e:local",
    "test:build": "npm run type-check && npm run build",
    "// === Maintenance ===": "",
    "clean": "rm -rf .next node_modules/.cache",
    "fresh": "npm run clean && npm install && npm run build",
    "reset:db": "npx tsx scripts/reset-db.ts",
    "// === Git Hooks ===": "",
    "prepare": "husky"
  },
  "dependencies": {
    "@ducanh2912/next-pwa": "^10.2.9",
    "@sentry/nextjs": "^10.22.0",
    "@supabase/supabase-js": "^2.39.0",
    "@vercel/analytics": "^1.5.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@eslint/eslintrc": "^3.3.1",
    "@faker-js/faker": "^9.3.0",
    "@inquirer/prompts": "^7.10.0",
    "@next/bundle-analyzer": "^15.5.6",
    "@playwright/test": "^1.48.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.6",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^25.0.0",
    "msw": "^2.12.1",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.0",
    "typescript": "^5",
    "vitest": "^2.1.0",
    "vitest-axe": "^0.1.0"
  }
}
